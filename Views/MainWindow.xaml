<Window x:Class="Random_String_Generator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_String_Generator.Views"
        xmlns:vm="clr-namespace:Random_String_Generator.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
            <Label Content="Thread Count:" />
            <TextBox Text="{Binding ThreadCount}" />
            <Button Content="Start" Command="{Binding StartCommand}" />
            <Button Content="Stop" Command="{Binding StopCommand}" />
            <ListView ItemsSource="{Binding GeneratedData}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Thread ID" DisplayMemberBinding="{Binding ThreadID}" />
                        <GridViewColumn Header="Generated Data" DisplayMemberBinding="{Binding Data}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
